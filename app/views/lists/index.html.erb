<h1>ToDo Lists:</h1>

<table>
  <thead>
  <tr>
    <th>Title</th>
    <th>Description</th>
    <th colspan="3"></th>
  </tr>
  </thead>

  <tbody>
  <% @lists.each do |list| %>
      <tr>
        <td><%= list.title %></td>
        <td><%= list.description %></td>
        <td>
          <%= link_to "List Items", list_items_path(list)%>
          <%= link_to 'Show', list %>
          <%= link_to 'Edit', edit_list_path(list) %>
          <%= link_to 'Destroy', list, method: :delete, data: { confirm: 'Are you sure?' } %>
        </td>
      </tr>
  <% end %>
  </tbody>
</table>

<br>

<h2><%= link_to 'New List', new_list_path %></h2>